@model List<Genre>
<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Genre</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="Manage" asp-controller="Genre" asp-action="Create" class="btn btn-primary">Create New Genre</a>
        </div>
	</div>
	<div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Handle</th>
                  
                </tr>
            </thead>
            <tbody>
               @foreach(var genre in Model)
               {
                <tr>
                    <td>@genre.Name</td>
                    <td>
							<a asp-area="Manage" asp-controller="Genre" asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-area="Manage"
                               asp-controller="Genre"
                               asp-action="Detail"
                               asp-route-id="@genre.Id"
                               class="btn btn-sm btn-info detail-btn">Detail</a>

							<a asp-area="Manage" asp-controller="Genre" asp-action="Delete" asp-route-id="@genre.Id" class="btn btn-sm btn-danger delete">Delete</a>

                    </td>
                </tr>
				}

             
            </tbody>
        </table>
	</div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   <script>
       $(document).ready(function(){
           $('.delete').click(function(e){
               e.preventDefault();
               var url = $(this).attr('href');
               Swal.fire({
                   title: 'Are you sure?',
                   text: "You won't be able to revert this!",
                   icon: 'warning',
                   showCancelButton: true,
                   confirmButtonColor: '#3085d6',
                   cancelButtonColor: '#d33',
                   confirmButtonText: 'Yes, delete it!'
               }).then((result) => {
                   if (result.isConfirmed) {
                      fetch(url)
					   .then(res => 
                       {
                           if(res.ok){
                                    swalWithBootstrapButtons.fire({
                                 title: "Deleted!",
                           text: "Your file has been deleted.",
                           icon: "success"
                                 });
		                           window.location.reload();
                           }else{
                                    swalWithBootstrapButtons.fire({
                                    title: "Cancelled",
                                    text: "Your imaginary file is safe :)",
                                      icon: "error"
                                 });
                           }
                       });
                       }
				      });
                   });
                     $('.detail-btn').click(function (e) {
                 e.preventDefault();
                 var url = $(this).attr('href');
                 fetch(url)
                     .then(res => {
                         if (!res.ok) throw new Error("Network response was not ok");
                         return res.text();
                     })
                     .then(html => {
                                Swal.fire({
            title: '<strong>Genre Details</strong>',
            html: html,
            showCloseButton: true,
            showConfirmButton: false,
            width: '400px',
            background: '#fff',
            customClass: {
                popup: 'rounded-4 shadow-lg',
                htmlContainer: 'text-start' // içindəkiləri soldan göstərir
            }
        });

                     });
             });

                      
		});

   </script>
}