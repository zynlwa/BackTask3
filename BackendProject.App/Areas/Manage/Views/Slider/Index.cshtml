@model List<Slider>
<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Slider</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="Manage" asp-controller="Slider" asp-action="Create" class="btn btn-primary">Create Slider</a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ImageUrl</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">BText</th>
                    <th scope="col">BLink</th>
                    <th scope="col">Order</th>
                    <th scope="col">Handle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td>
                            <img width="100" src=~/assets/image/bg-images/@slider.ImageUrl" alt="">
                        </td>
						<td>@slider.Title</td>
                        <td>@slider.Description</td>
                        <td>@slider.ButtonText</td>
                        <td>@slider.ButtonLink</td>
                        <td>@slider.Order</td>
                        <td>
                            <a asp-area="Manage" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-area="Manage" asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-sm btn-info">Detail</a>
							<a asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-sm btn-danger">Delete</a>
						</td>
                         

                       
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
